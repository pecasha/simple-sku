{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2021",
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "useDefineForClassFields": false,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "rootDir": "./src",
        "outDir": "./build"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
